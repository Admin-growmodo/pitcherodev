{% if product.handle contains 'player-bundle-annual'  %}
<script>

var $originalSelect = $('#product-option-9255503823133-gps-player-vest-size'); // GPS Player Vest Size select
var $membershipSelect = $('#product-option-9255503823133-annual-membership-type'); // Annual Membership Type select
var $hiddenSelect = $('select[data-option-main]'); // Hidden select
var membership = $("[data-checkout-process=membership] input[data-selling-plan-id]");
$('#buy_as_gift').attr('disabled', 'disabled');
// Function to update the hidden select
function updateHiddenSelect() {
    var size = $originalSelect.val();
    var membership = $membershipSelect.val();
    
    if (size && membership) {
        var combinedValue = size + ' / ' + membership;
        $hiddenSelect.val($hiddenSelect.find('option').filter(function() {
            return $(this).text() === combinedValue;
        }).val());
    }
}
var setItemStorage = function() {
    var sellingId;
    membership.each(function() {
        if ($(this).is(":checked")) {
            sellingId = {
                sellingId: $(this).data('selling-plan-id'),
                Id: $(this).val()
            };
        }
    });
    var sellingIdString = JSON.stringify(sellingId);

    localStorage.setItem("productVariant", $hiddenSelect.val());
    localStorage.setItem('selectedProductId', membershipId);
    // localStorage.setItem("sellingId", sellingIdString);
};
// Attach event listeners to the select elements
$originalSelect.on('change', updateHiddenSelect);
$membershipSelect.on('change', updateHiddenSelect);

// Attach click event listener to the Buy as Gift button
$('#buy_as_gift').on('click', function() {
    $membershipSelect.val('12 Months Gift Membership').trigger('change');

    setItemStorage();
  window.location.href = "/pages/checkout-process";
});
$('.add_tocart_button').on('click', function() {
    
  // $membershipSelect.val('£60 per year after activation').trigger('change');

    setItemStorage();
  window.location.href = "/pages/checkout-process";
});

// Attach click event listener to each button for size selection
$('.size__grid-container .button').on('click', function() {
    var variantId = $(this).data('variant-id');
    var $radio = $('#a' + variantId);

    if ($radio.length) {
        $radio.prop('checked', true);
        var sizeLabel = $radio.data('variant-label');
        $originalSelect.val(sizeLabel).trigger('change');
        $('[data-submit-bundle]').removeAttr('disabled');
        $('[data-submit-gift-bundle]').removeAttr('disabled');
    }
});
</script>
