{% assign selected_blog = section.settings.blog %}

<section id="blog-{{section.id}}" class="mb-4{% if section.settings.spacing %} mt-2.5{% endif %} max-w-screen-lg mx-auto px-5 lg:px-[25px]">
  <div class="max-w-screen-xl mx-auto px-2.5 lg:px-10">
    <div class="flex items-center mb-4 sm:mb-6{% if section.settings.title == blank %} sm-down:hidden{% endif %} heading_container">
      <div>
      {% if section.settings.title != blank %}
        <h2 class="text-30 article__title">{{ section.settings.title }}</h2>
      {% endif %}

        {% if section.settings.sub_heading != blank %}
          <p class="article_subheading">{{ section.settings.sub_heading }}</p>
        {% endif %}
      </div>


      <a href="{{ selected_blog.url | default: '#' }}" class="flex items-center ml-auto space-x-2 text-16 font-bold sm-down:hidden article__link_style">
        <span>{{ section.settings.button_text }}</span>
        {% comment %} {% render "icons", icon: "arrow-right", className: "!w-5 !h-5" %} {% endcomment %}
      </a>
    </div>

    <div class="relative new_blog">
      
      {% if selected_blog != blank and selected_blog.articles.size > 0 %}
        {% for article in selected_blog.articles limit:3 %}
          {% render "article-item-2024", article: article %}
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          {% render "article-item-placeholder-2" %}
        {% endfor %}
      {% endif %}

    </div>
    <div class="blog_mobile">
      <swiper-container class="mySwiper" init="false">

        
      {% if selected_blog != blank and selected_blog.articles.size > 0 %}
        {% for article in selected_blog.articles limit:3 %}
          {% render "article-item-3", article: article %}
        {% endfor %}
      {% endif %}
   

      </swiper-container>
      <div class="blog__pagination">
        <div class="custom-pagination"></div>
      </div>
      
    </div>

    <div class="mt-10 sm:hidden mx-auto text-center">
      <a href="{{ selected_blog.url | default: '#' }}" class="Button">Read More Posts </a>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>

  <script>
    const swiperEl = document.querySelector('swiper-container')
    Object.assign(swiperEl, {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: '.custom-pagination', // Use custom pagination container
      clickable: true,
      renderBullet: function (index, className) {
        return '<span class="' + className + '"></span>';
      },
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 2,
          spaceBetween: 40,
        },
        1024: {
          slidesPerView:3,
          spaceBetween: 50,
        },
      },
    });
    swiperEl.initialize();
  </script>

